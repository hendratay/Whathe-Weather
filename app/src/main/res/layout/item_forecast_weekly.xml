<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp" >

    <LinearLayout
        android:id="@+id/item_forecast_layout"
        android:orientation="horizontal"
        android:background="@android:color/background_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            tools:src="@drawable/wi_sunny"
            android:id="@+id/weekly_weather_icon_image_view"
            android:layout_gravity="center"
            android:layout_width="48dp"
            android:layout_height="48dp"
            tools:ignore="ContentDescription" />

        <TextView
            tools:text="Clear Sky"
            app:fontFamily="monospace"
            android:id="@+id/weekly_weather_desc_text_view"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3" />

        <TextView
            tools:text="(10 pm)"
            app:fontFamily="monospace"
            android:id="@+id/weekly_time_text_view"
            android:layout_gravity="center|end"
            android:gravity="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            tools:text="30\u00b0"
            app:fontFamily="monospace"
            android:id="@+id/weekly_temp_text_view"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>
